<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img class="img-fluid rounded-start" src="{{user.image}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5>{{user.name}}</h5>
        <h6>{{user.email}}</h6>
        <ul>
          <li>{{comments.length}}間已評論餐廳</li>
          <li>{{user.FavoritedRestaurants.length}}間已收藏餐廳</li>
          <li>{{user.Followers.length}}位粉絲</li>
          <li>{{user.Followings.length}}追蹤中</li>
        </ul>
        {{#ifCond user.id loginUser}}
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">edit</a>
        {{/ifCond}}
        <a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-4">
    {{!-- followings --}}
    <div class="card">
      {{#ifCond user.Followings.length 0}}
      <h5 class="card-header">目前無追蹤中</h5>
      {{else}}
      <h5 class="card-header">{{user.Followings.length}}追蹤中</h5>
      {{/ifCond}}
      <div class="row">
        {{#each user.Followings}}
        <div class="col-md-3">
          <div class="card-body">
            <div class="card-img-top shadow-sm">
              <a href="/users/{{this.id}}">
                <img class=" img-fluid" src="{{this.image}}" alt="Card image cap" width="286px"
                  height="180px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
                {{this.name}}
              </a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{!-- follows --}}
    <div class="card">
      {{#ifCond user.Followers.length 0}}
      <h5 class="card-header">目前沒有粉絲</h5>
      {{else}}
      <h5 class="card-header">{{user.Followers.length}}位粉絲</h5>
      {{/ifCond}}
      <div class="row">
        {{#each user.Followers}}
        <div class="col-md-3">
          <div class="card-body">
            <div class="card-img-top shadow-sm">
              <a href="/users/{{this.id}}">
                <img class=" img-fluid" src="{{this.image}}" alt="Card image cap" width="286px"
                  height="180px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
                {{this.name}}
              </a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-8">
    {{!-- 已評論 --}}
    <div class="card">
      {{#ifCond comments.length 0}}
      <h5 class="card-header">目前沒有評論</h5>
      {{else}}
      <h5 class="card-header">{{comments.length}}已評論餐廳</h5>
      {{/ifCond}}
      <div class="row">
        {{#each comments}}
        <div class="col-md-3">
          <div class="card-body">
            <div class="card-img-top shadow-sm">
              <a href="/restaurants/{{this.Restaurant.id}}">
                <img class=" img-fluid" src="{{this.Restaurant.image}}" alt="Card image cap" width="286px"
                  height="180px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
                {{this.Restaurant.name}}
              </a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{!-- 已收藏 --}}
    <div class="card">
      {{#ifCond user.FavoritedRestaurants.length 0}}
      <h5 class="card-header">目前收藏餐廳</h5>
      {{else}}
      <h5 class="card-header">{{user.FavoritedRestaurants.length}}已收藏餐廳</h5>
      {{/ifCond}}
      <div class="row">
        {{#each user.FavoritedRestaurants}}
        <div class="col-md-3">
          <div class="card-body">
            <div class="card-img-top shadow-sm">
              <a href="/restaurants/{{this.id}}">
                <img class=" img-fluid" src="{{this.image}}" alt="Card image cap" width="286px"
                  height="180px" style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
                {{this.name}}
              </a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>